{
  "$schema": "https://json.schemastore.org/prettierrc",
  "plugins": ["@prettier/plugin-oxc", "@ianvs/prettier-plugin-sort-imports"],
  "printWidth": 80,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "es5",
  "importOrderTypeScriptVersion": "5.9.3",
  "importOrder": [
    "<BUILTIN_MODULES>",
    "<THIRD_PARTY_MODULES>",
    "^@/",
    "^[.]",
    "<TYPES>",
    "<TYPES>^@/",
    "<TYPES>^[.]"
  ]
}
