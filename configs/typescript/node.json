{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["./base.json", "@tsconfig/node24/tsconfig.json"],
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "isolatedModules": true,

    "sourceMap": true,
    "declaration": true,
    "removeComments": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
